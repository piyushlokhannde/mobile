<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myalbum.album"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.myalbum.album.SelectFolderAcitivity"
            android:label="@string/app_name"
            android:theme="@style/PopupTheme" >
             
        </activity>
        <activity
            android:name="com.myalbum.album.CreateAlbumActivity"
            android:label="@string/title_activity_create_album" >
            
        </activity>
        <activity
            android:name="com.myalbum.album.ViewAlbumActivity"
            android:label="@string/title_activity_view_album"  android:windowSoftInputMode="adjustPan">
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>  
                     
        </activity>
        <activity
            android:name="com.myalbum.album.AlbumViewPagerActivity"
            android:label="@string/title_activity_album_view_pager" >
           
            
        </activity>
    </application>

</manifest>
