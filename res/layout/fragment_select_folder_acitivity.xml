<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.myalbum.album.SelectFolderAcitivity$PlaceholderFragment" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@android:color/darker_gray"
        android:gravity="top" >

        <Button
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/backbtnselectfolderselector"
            android:clickable="false" />

        <TextView
            android:id="@+id/bannerTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView1"
            android:background="@drawable/bannerselectfolderorange"
            android:gravity="center"
            android:text="folder/dd/ddd/ddd"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listViewSelectFolder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/listdivider"
        android:drawSelectorOnTop="true"
        android:scrollbarAlwaysDrawVerticalTrack="true" >

    </ListView>

</LinearLayout>
