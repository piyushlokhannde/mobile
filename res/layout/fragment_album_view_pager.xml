    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_viewpager_vertical_margin"
    android:paddingLeft="@dimen/activity_viewpager_horizontal_margin"
    android:paddingRight="@dimen/activity_viewpager_horizontal_margin"
    android:paddingTop="@dimen/activity_viewpager_vertical_margin"
